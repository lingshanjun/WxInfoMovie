/* list.wxss */
page{
  background-color: #f6f8f9;
}
swiper{
  height: 600rpx;
}
swiper image{
  width: 100%;
  height:100%; 
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-bottom: 5px;
  background-color: #fff;
  border-bottom: 1rpx solid #ededed;
  border-top: 1rpx solid #ededed;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle; 
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}
.post-title{
  margin-bottom: 10rpx;
  margin-left: 10rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
}
.post-like{
  margin-left: 10rpx;
  line-height: 16px;
  font-size: 13px;
}
.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-text{
  margin-right: 20px;
  vertical-align: middle;
}